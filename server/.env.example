# App Configuration
APP_NAME="This are app name for"
APP_VERSION=1.0.0

# Server Configuration
PORT=3002
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3002
TRUSTED_IPS=127.0.0.1

# JWT Configuration
JWT_SECRET=YourJWTSecret
JWT_EXPIRES_IN=7 # 7 Hari
REFRESH_TOKEN_SECRET=YourRefreshTokenSecret
REFRESH_TOKEN_EXPIRES_IN=30 # 30 Hari
HEALTH_TOKEN=YourHealthToken

# Session Configuration
SESSION_NAME=YourSessionName
SESSION_SECRET=YourSessionSecret
SESSION_EXPIRE_HOURS=2 # 2 jam

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads
PUBLIC_PATH=public

# Socket.IO Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5 # maximum login attempts before lock
ACCOUNT_LOCK_TIME=15 # in minutes
